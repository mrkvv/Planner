deleteAllUserNotes:
DELETE FROM user_notes;

-- Запросы для user_settings
getSetting:
SELECT user_settings.value FROM user_settings WHERE key = ?;

setSetting:
INSERT OR REPLACE INTO user_settings (key, value)
VALUES (?, ?);

deleteSetting:
DELETE FROM user_settings WHERE key = ?;